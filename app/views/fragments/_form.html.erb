<%= form_for([@project, @fragment]) do |f| %>
  <% if @fragment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fragment.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @fragment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="clearfix">
      <%= f.label :title%>
      <div class="input">
        <%= f.text_field :title, :class => "xxlarge" %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :content%>
      <div class="input">
        <%= f.text_area :content, :class => "xxlarge" %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :image %>
      <div class="input">
        <%= f.file_field :image %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit :class => "btn primary"%>
      <%= link_to 'Cancel', @fragment.project , :class => "btn" %>
    </div>
  </fieldset>
<% end %>

