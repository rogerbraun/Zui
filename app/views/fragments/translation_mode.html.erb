</ul>

<div class="container">
  <div class="row">
    <div class="span16">
      <%= render "devise/shared/flash-messages" %>
    </div>
    <div id="original-wrapper" class="span6">
      <div id="original">
        <h1>Original</h1>
        <h2><%= @fragment.title %></h2>
        <%= make_translatable Kramdown::Document.new(@fragment.content).to_html.html_safe %>
      </div>
    </div>
    <div class="span10">
      <h1>Übersetzung</h1>
      <%= render "comments/form"%>
    </div>
  </div>
  <div class="row">
    <div class="span16">
      <%= link_to "Zurück zum Fragment", project_fragment_path(@project, @fragment) %>
    </div>
  </div>
</div>

