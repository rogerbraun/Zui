<ul id="selectableMenu" class="contextMenu">
  <li><span class="header">PLACEHOLDER</span></li>
  <li><a href="#google">Google</a></li>
  <li><a href="#wadoku">wadoku.eu</a></li>
  <li><a href="#edit"><span class="edit">PLACEHOLDER</span></a></li>
