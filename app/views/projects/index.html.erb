<div class="container">
  <section id="index">
    <div class="row">
      <div class="span4 columns">
        <h3>Aktionen</h3>
        <p>
          <%= link_to 'Neues Projekt', new_project_path, :class => "btn primary" %>
        </p>

      </div>
      <div class="span12 columns">
        <h3>Projekte</h3>
        <table class="zebra-striped">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Owner</th>
              <th></th>
            </tr>
          </thead>
  
          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= project.title %></td>
                <td><%= truncate(project.description, :length => 50) %></td>
                <td><%= project.user.email%></td>
                <td>
                  <% if can? :read, project %>
                    <%= link_to 'Ansehen', project %>
                  <% else %>
                    Keine Berechtigung
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </section>
</div>
