
        <table class="zebra-striped">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th></th>
            </tr>
          </thead>
  
          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= project.title %></td>
                <td><%= truncate(project.description, :length => 200) %></td>
                <td>
                  <% if can? :read, project %>
                    <%= link_to 'Ansehen', project %>
                  <% else %>
                    Keine Berechtigung
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
