<div class="comment_form">
  <%= form_for [@project, @fragment, @comment], :remote => true do |f| %>
    <fieldset>
      <% if @parent %>
        <%= f.hidden_field :parent_id, :value => @parent.id %>
      <% end %>
      <div class="clearfix">
        <%= f.label :tag_list, t("comment.tags") %>
        <div class="input">
          <%= f.text_field :tag_list, :class => "xxlarge tag_list" %>
        </div>
      </div>
      <div class="clearfix">
        <%= f.label :body, t("comment.body")%>
        <div class="input">
          <%= f.text_area :body, :rows => 3, :class => "xxlarge"%>
        </div>
      </div>
      <div class="actions">
        <%= f.submit t("comment.submit"), :class => "btn primary"%>
      </div>
    </fieldset>
  <% end %>
</div>
