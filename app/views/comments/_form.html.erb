<div class="comment_form">
  <%= form_for [@project, @fragment, @comment], :remote => true do |f| %>
    <%= f.text_area :body, :rows => "4", :class => "full-width"%>
    <% if @parent %>
      <%= f.hidden_field :parent_id, :value => @parent.id %>
    <% end %>
    <div class="button">
      <%= f.submit :class => "btn primary"%>
    </div>
  <% end %>
</div>
